<% include ./partials/header.ejs %>

<div class="row">
    <h1 style="text-align: center">Log in to Campster</h1>
    <div style="margin: 25px auto; float: none;" class="col-md-4 col-sm-5 col-xs-10">
        <form action="/login" method="post">
            <div class="form-group">
                <label>Username</label>
                <input class="form-control" type="text" name="username" placeholder="eg. John">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" name="password" placeholder="********">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Log In</button>
            </div>
        </form>
        <p>Don't have an account? <a href="/register">Register here</a></p>
    </div>
</div>

